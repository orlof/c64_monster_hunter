{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Exomizer",
            "type": "shell",
            "command": "util/exomizer.sh",
            "dependsOrder": "sequence",
            "dependsOn": [
                "XC_BASIC"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "XC_BASIC",
            "type": "shell",
            "osx": {
                "command": "${config:xcbasic3.basefolder}/bin/macOS/xcbasic3",
                "args": [
                    "-p=False",
                    "-k",
                    "--inline-data",
                    "${file}",
                    "${fileDirname}/${fileBasenameNoExtension}.prg"
                ]
            },
            "linux": {
                "command": "${config:xcbasic3.basefolder}/bin/Linux/xcbasic3",
                "args": [
                    "-p=False",
                    "-k",
                    "--inline-data",
                    "${file}",
                    "${fileDirname}/${fileBasenameNoExtension}.prg"
                ]
            },
            "windows": {
                "command": "${config:xcbasic3.basefolder}/bin/Windows/xcbasic3.exe",
                "args": [
                    "-p=False",
                    "-k",
                    "--inline-data",
                    "${file}",
                    "${fileDirname}\\${fileBasenameNoExtension}.prg"
                ]
            }
        }
    ]
}