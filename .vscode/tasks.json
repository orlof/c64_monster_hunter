{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "VICE",
            "type": "shell",
            "osx": {
                "command": "open",
                "args": [
                    "monster.prg"
                ]
            },
            "windows": {
                "command": "x64sc",
                "args": [
                    "monster.prg"
                ]
            },
            "linux": {
                "command": "x64sc",
                "args": [
                    "monster.prg"
                ]
            },
            "dependsOrder": "sequence",
            "dependsOn": [
                "XCBASIC",
                "EXOMIZER"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "EXOMIZER",
            "type": "shell",
            "command": "exomizer sfx basic monster_hunter.prg data/title_bitmap.prg data/title_screenram.prg data/title_colorram.prg data/charset.prg data/sprite_data.prg -o monster.prg -x 'inc $d020'",
            "dependsOrder": "sequence",
            "dependsOn": [
                "XCBASIC"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "XCBASIC",
            "type": "shell",
            "osx": {
                "command": "${config:xcbasic3.basefolder}/bin/macOS/xcbasic3",
                "args": [
                    "-p=False",
                    "-k",
                    "--inline-data",
                    "${file}",
                    "${fileDirname}/${fileBasenameNoExtension}.prg"
                ]
            },
            "linux": {
                "command": "${config:xcbasic3.basefolder}/bin/Linux/xcbasic3",
                "args": [
                    "-p=False",
                    "-k",
                    "--inline-data",
                    "${file}",
                    "${fileDirname}/${fileBasenameNoExtension}.prg"
                ]
            },
            "windows": {
                "command": "${config:xcbasic3.basefolder}/bin/Windows/xcbasic3.exe",
                "args": [
                    "-p=False",
                    "-k",
                    "--inline-data",
                    "${file}",
                    "${fileDirname}\\${fileBasenameNoExtension}.prg"
                ]
            }
        }
    ]
}